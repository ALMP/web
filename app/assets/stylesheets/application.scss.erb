@charset "utf-8";

@import "font-awesome";
@import "tooltipster.bundle";
@import "rrssb";

$font-family-sans-serif: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
  "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
  sans-serif;

$alert-padding-x: .75rem;
$alert-padding-y: .25rem;
$alert-margin-bottom: 0;

$border-radius: 0;
$border-radius-lg: 0;
$border-radius-sm: 0;

$base-border: $border-radius solid #dfe0e1;
$font-weight-bold: 600;

$input-line-height: 1.5;
$input-padding-y: .25rem;
$input-color-placeholder: darken(#dfe0e1, 20%);


$brand-action: #2a94d6;

$brand-danger: #c77067;
$state-danger-bg: $brand-danger;
$state-danger-text: black;

$brand-success: #4ab471;
$state-success-bg: $brand-success;
$state-success-text: black;

$brand-warning: #dba915;
$brand-primary: #276286;

$container-max-widths: (
  sm: 640px,
  md: 820px,
  lg: 960px,
  xl: 1024px
);

$jumbotron-padding: 1rem;

$headings-line-height: 1.5;
$headings-font-weight: bold;

$font-size-h1: 1.44rem;
$font-size-h2: 1.44rem;
$font-size-h3: 1.25rem;
$font-size-h4: 1.25rem;
$font-size-h5: 1rem;
$font-size-h6: 1rem;

$link-color: #2a94d6;
$link-hover-decoration: none;

$small-font-size: 75%;

$list-group-item-padding-x: .75rem;
$list-group-item-padding-y: .5rem;

$card-spacer-x: .75rem;
$body-bg: #f6f7f7;

@import "bootstrap";
@import "select2";
@import "select2-bootstrap";
@import 'typeaheadjs';
@import 'bourbon';

@import 'v2/components/**/*';
@import 'v2/pages/**/*';
